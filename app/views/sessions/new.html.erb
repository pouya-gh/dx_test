<%= content_for(:title, full_title(t('user.login.text'))) %>

<%= bootstrap_form_for(:session, url: sessions_path) do |f| %>
  <%= f.text_field :email, label: t('user.email') %>
  <%= f.password_field :password, label: t('user.password') %>
  <%= f.submit t('user.login.text') %> |
  <%= link_to t('user.register.text'), signup_path %>
<% end %>