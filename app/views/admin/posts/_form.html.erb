<%= form_for([:admin, @post], layout: :basic) do |f| %>
  <%= f.text_field :title, label: t('post.title'), placeholder: t('post.title') %>
  <%= f.text_area :digest, label: t('post.digest'), placeholder: t('post.digest') %>
  <%= f.file_field :image, label: t('post.image'), placeholder: t('post.image') %>
  <%= f.text_field :tags, label: t('post.tags'), placeholder: t('post.tags'), value: @post.tags.join(','), 'data-role' => 'tagsinput', id: 'tagsinput' %>
  <%= f.submit t("post.#{form_type}.text") %>
<% end %>
